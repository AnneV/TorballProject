
<% form_for @menu, :url => {:action => 'add_submenu', :id => @link.id} do |f| %>
  <%= f.error_messages %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br />
    <%= f.label :type %>
    <%= f.text_field :type %> <br />
    <%= f.label :published %>
    <%= f.check_box :published %>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>

