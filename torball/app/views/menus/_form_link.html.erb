<% form_for @link, :url => {:action => 'add_link', :id => @menu.id} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :menu %><br />
    <%= @menu.id%>
  </p>
  <p>
    <%= f.label :page %><br />
    <select name="page" id ="page_id">
	<option value=""> Choose a page </option>
	<% for page in @pages -%>
	  <option value="<%= page.id %>"> <%= page.id %> - <%= page.title %> </option>
	<% end -%>
    </select>
  </p>

  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>

<% end %>

