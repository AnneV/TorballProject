<% form_for @link, :url => {:action => 'add_link', :id => @menu.id} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :menu %><br />
    <%= @menu.id%>
  </p>
  <p>
    <%= f.label :page %><br />
    <%= f.text_field :page_id %>
  </p>

  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>

<% end %>

