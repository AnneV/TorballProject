  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
     <%= f.label :category %> <br />
     <select name="category" id="page_id">
     <% for category in @categories -%>

     <% end -%>
  </p>
  <p>
    <%= f.label :published %>
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
