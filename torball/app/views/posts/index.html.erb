<h1>Listing posts 
<span class="title_button"><%= link_to 'New post', new_post_path %></span>
</h1>


<table>
  <thead>
    <tr>
      <th class="column_posts_title">Title</th>
      <th>Category</th>
      <th>Published</th>
      <th>Date</th>
      <th></th>
    </tr>
   </thead>
<tbody>
<% @posts.each do |post| %>
  <tr>
    <td><%=h post.title %></td>
    <td><%=h post.category.name %></td>
    <td>
      <% if post.published %>
         Yes
      <% else %>
         No
      <% end %>
    
    </td>
    <td><%= post.created_at %></td>
    <td><%= link_to 'Show', post %> |
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method =>
    :delete %></td>
  </tr>
<% end %>
</tbody>
<thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Published</th>
      <th>Date</th>

      <th></th>
    </tr>
   </thead>

</table>

<br />


